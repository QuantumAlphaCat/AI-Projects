# StudySimplify Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection string (Neon or other PostgreSQL provider)
# Format: postgresql://username:password@host/database?sslmode=require
DATABASE_URL=postgresql://user:password@host/database

# =============================================================================
# OPENAI API
# =============================================================================
# Required for AI-powered content analysis and Study Buddy chat
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# =============================================================================
# STRIPE PAYMENT PROCESSING
# =============================================================================
# Required for subscription and credit pack payments
# Get your keys from: https://dashboard.stripe.com/apikeys

# Publishable key (safe to expose in frontend)
VITE_STRIPE_PUBLIC_KEY=pk_test_your-publishable-key-here

# Secret key (keep this secure, never commit to version control)
STRIPE_SECRET_KEY=sk_test_your-secret-key-here

# Webhook secret for Stripe event verification
# Get this from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# Stripe Price IDs for your products (from https://dashboard.stripe.com/products)
STRIPE_PRICE_ID_PRO_MONTHLY=price_your-pro-monthly-price-id
STRIPE_PRICE_ID_25_CREDITS=price_your-25-credits-price-id
STRIPE_PRICE_ID_100_CREDITS=price_your-100-credits-price-id
STRIPE_PRICE_ID_250_CREDITS=price_your-250-credits-price-id

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Node environment (development, production)
NODE_ENV=development

# Session secret for secure cookie encryption
SESSION_SECRET=your-random-session-secret-here

# =============================================================================
# OPTIONAL: DEMO MODE
# =============================================================================
# Enable demo mode for testing without API consumption
# DEMO_MODE=true
